<center><h3>Want Ranking</h3></center>
<% @items.each.with_index(1) do |items, i| %>
  <div class="container">
  <div class="container-inner inner-sm clearfix">
    <div class="item-single-main">
      <div class="image">
        <div class="img-wrap">
          <% #TODO 商品イメージ %>
          <%= image_tag(items.large_image, alt: items.title) %>
        </div>
      </div>
      <div class="title">
        <% #TODO 商品タイトル %>
        <%= "#{i}位" %> <%= items.title %>
      </div>
      <%= render 'items/action' , item: items %>
    </div>
    <div class="item-single-side">
      <div class="side-box">
        <h4 class="side-box-title">Wantしたユーザー</h4>
        <div class="side-box-body">
          <% # TODO Wantしたユーザー一覧 %>
          <% items.want_users.each do |user| %>
            <%= link_to gravatar_for(user, size: 30), user %>
          <% end %>
        </div>
      </div>
      <div class="text-center">
        <% #TODO 正しいリンク先に %>
        <%= link_to('楽天詳細ページへ', items.detail_page_url ) %>
      </div>
    </div>
  </div>
</div>
<% end %>